{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
  "formatter": {
    "enabled": true,
    "includes": ["**", "!**/*.gen.ts", "!public/js/*.min.js", "!**/*.css"],
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!**/*.gen.ts", "!public/js/*.min.js", "!**/*.css"],
    "rules": {
      "recommended": true,
      "a11y": {
        "useButtonType": "off",
        "noLabelWithoutControl": "off",
        "noStaticElementInteractions": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "noUnsafeOptionalChaining": "off",
        "useHookAtTopLevel": "off"
      },
      "nursery": {
        "useUniqueElementIds": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "off"
        }
      }
    }
  }
}
